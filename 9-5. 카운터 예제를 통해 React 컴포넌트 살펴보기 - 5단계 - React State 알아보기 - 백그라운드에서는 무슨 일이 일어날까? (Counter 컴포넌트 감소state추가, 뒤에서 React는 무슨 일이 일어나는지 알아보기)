import { useState } from 'react'
import './Counter.css'

export default function Counter() {

    // [0, Ζ’] 
    // const [firstElt, secondElt] = array
    const [count, setCount] = useState(0);

    function incrementCounterFunction() {

        setCount(count + 1)

    }

    //1: functionμ„ μ…λ ¥ν•κ³  'decrementCounterFunction()'μ„ λ§λ“  λ‹¤μ //1-1: returnμΌλ΅...
    function decrementCounterFunction() {

        //1-2: κ·Έλ¦¬κ³  κ³„μ‚°μ‹μ„ count-1λ΅ λ°”κΎΈκ² λ‹¤, μ΄λ¬λ©΄ λ κΉ? ν•λ² μ‹¤ν–‰ν•΄ λ³΄μ
        setCount(count - 1)
    }

    return(
    <div className='Counter'>
        <span className='count'>{count}</span>
        <div>
         <button className="counterButton" 
                 onClick={incrementCounterFunction}
         >+1</button>

        //1-1: μ•„λμ½μ— λ²„νΌμ„ ν•λ‚ λ” μ¶”κ°€ν•κ³  ν…μ¤νΈμ— '-1'λ΅ λ°”κΎΈκ² λ‹¤ 
        //μ΄ λ²„νΌμ΄ ν΄λ¦­λλ©° decrementCounterFunction ν•¨μλ¥Ό νΈμ¶ν•΄μ•Όκ² μ§€ (onClickμ— {decrementCounterFunction}ν•¨μλ¥Ό μ‚½μ…) //1-2:decrementCounterFunction()μΌλ΅..
        <button className="counterButton" 
                 onClick={decrementCounterFunction}
         >-1</button>
        </div>
    </div>
    )
}
