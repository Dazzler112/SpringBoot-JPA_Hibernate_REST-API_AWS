import {BrowserRouter, Routes, Route} from 'react-router-dom'
import './TodoApp.css'
import LogoutComponent from './LogoutComponent'
import HeaderComponent from './HeaderComponent'
import ListTodosComponent from './ListTodosComponent'
import ErrorComponent from './ErrorComponent'
import WelcomeComponent from './WelcomeComponent'
import LoginComponent from './LoginComponent'

export default function TodoApp() {
    return(
        <div className='TodoApp'>

        //3: ì—¬ê¸° ë‚˜ì™€ ìˆëŠ” ê° ìš”ì†Œì— AuthProviderì— ìˆëŠ” ì»¨í…ìŠ¤íŠ¸ë¥¼ ì œê³µí•˜ë ¤ëŠ” ê²ƒì´ë‹¤
        //ê·¸ë˜ì„œ ê²°êµ­ í•˜ë ¤ëŠ” ê²ƒì€ ì—¬ê¸° ë“¤ì–´ì™€ì„œ <AuthProvider>ë¡œ ë¬¶ëŠ” ì´ëŸ° ì‹ì˜ ì‘ì—…ì„ í•  ê²ƒì´ë‹¤
        //AuthProvider, BrowserRouter, BrowserRouter, AuthProvider ìˆœì´ì§€ ìš°ë¦¬ê°€ ì‚¬ìš©í•  êµ¬ë¬¸ì€ ì´ëŸ° ì‹ì´ë‹¤
            <AuthProvider>
            <BrowserRouter>
                <HeaderComponent />
                <Routes>
                    <Route path='/' element={<LoginComponent />} />
                    <Route path='/login' element={<LoginComponent />} />
                    <Route path='/welcome/:username' element={<WelcomeComponent />} />
                    <Route path='/todos' element={<ListTodosComponent />} />
                    <Route path='/logout' element={<LogoutComponent />} />
                    <Route path='*' element={<ErrorComponent />} />
                </Routes>
            </BrowserRouter>
            </AuthProvider>
        </div>
    )
}
