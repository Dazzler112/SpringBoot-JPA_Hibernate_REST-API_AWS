import {BrowserRouter, Routes, Route, Navigate} from 'react-router-dom'
import './TodoApp.css'
import LogoutComponent from './LogoutComponent'
import HeaderComponent from './HeaderComponent'
import ListTodosComponent from './ListTodosComponent'
import ErrorComponent from './ErrorComponent'
import WelcomeComponent from './WelcomeComponent'
import LoginComponent from './LoginComponent'

//3-2: к·ёлџ¬л©ґ TodoComponentк°Ђ мћ„нЏ¬нЉёлђ  кІѓмќґл‹¤, к·ёлџ°лЌ° TodoComponentк°Ђ мћ„нЏ¬нЉёлђм§Ђ м•Љм•л‹¤ л¬ґм—‡мќґ мћлЄ»лђм—€лЉ”м§Ђ ліґмћђ, todocomponentлҐј кІЂмѓ‰н•ґм„њ ліґл©ґ..

import AuthProvider, { useAuth } from './security/AuthContext'


function AuthencatedRoute({children}) {
    const authContext = useAuth()
    if(authContext.isAuthenticated)
        return children

    return <Navigate to="/" />
}

export default function TodoApp() {
    return(
        <div className='TodoApp'>
            <AuthProvider>
            <BrowserRouter>
                <HeaderComponent />
                <Routes>
                    <Route path='/' element={<LoginComponent />} />
                    <Route path='/login' element={<LoginComponent />} />

                    <Route path='/welcome/:username' element={
                        <AuthencatedRoute>
                            <WelcomeComponent />
                        </AuthencatedRoute>
                        } />

                    <Route path='/todos' element={
                        <AuthencatedRoute>
                            <ListTodosComponent />
                        </AuthencatedRoute>
                        } />

                    //3: TodoComponentлҐј м¶”к°Ђн•  кІѓмќґл‹¤, к·ёлџј м•ћм—ђм„њ н•њ кІѓкіј к°™мќЂ к±ё н•  к±°кі  мљ°л¦° idлҐј л„Јм–ґм„њ /todo/лќјлЉ” кІЅлЎњлҐј м„¤м •н•л ¤кі  н•њл‹¤
                    //к·ёлџј л„€лЉ” Todo idлҐј нЊЊлќјлЇён„°лЎњм„њ л„Јм–ґмЈјл ¤кі  н•м§Ђ, к·ёлџј '/todo/:id'лќјкі  н•кі  
                    <Route path='/todo/:id' element={
                        <AuthencatedRoute>
                          //3-1: elementлЉ” TodoComponentк°Ђ лђ  кІѓмќґл‹¤ ctrl+spaceлҐј л€„лҐґкі  м—”н„° н‚¤лҐј л€Њлџ¬ліґмћђ //3-2: мћ„нЏ¬нЉёлЎњ..
                            <TodoComponentt />
                        </AuthencatedRoute>
                        } />

                    <Route path='/logout' element={
                        <AuthencatedRoute>
                            <LogoutComponent />
                        </AuthencatedRoute>
                        } />

                    <Route path='*' element={<ErrorComponent />} />
                </Routes>
            </BrowserRouter>
            </AuthProvider>
        </div>
    )
}
