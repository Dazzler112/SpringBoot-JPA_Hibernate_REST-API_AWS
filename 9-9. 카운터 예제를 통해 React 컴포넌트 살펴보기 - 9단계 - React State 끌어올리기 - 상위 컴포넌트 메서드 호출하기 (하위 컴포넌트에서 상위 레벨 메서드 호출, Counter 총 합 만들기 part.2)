вЏє Counter.jsx




import { useState } from 'react'
import {PropTypes} from 'prop-types'
import './Counter.css'

export default function Counter() {

    const [count, setCount] = useState(0);

    function incrementCounterParentFunction(by) {
        setCount(count + by)
    }

    function someMethodInParent() {
        console.log('parent method called')
    }

    return(
       <> 
        <span className='totalCount'>{count}</span>
        <CounterButton by={1} someMethodInParent={someMethodInParent}/>
        <CounterButton by={2} someMethodInParent={someMethodInParent}/>           
        <CounterButton by={5} someMethodInParent={someMethodInParent}/>
       </>
    )
}

//3:  CounterButton()мќ л§¤к°њліЂм€м—ђм„њ,'by, someMethodInParent' мќґл ‡кІЊ л§ђмќґл‹¤
// мќґл ‡кІЊ н•л©ґ CounterButton м•€м—ђм„њ л©”м„њл“њм—ђ м ‘к·јн•  м€ мћ€л‹¤, мќґк±ё л©”м„њл“њ н•нѓњлЎњ нём¶њн•л©ґ лђњл‹¤
function CounterButton({by, someMethodInParent}) {

    // [0, Ж’] 
    // const [firstElt, secondElt] = array
    const [count, setCount] = useState(0);

    function incrementCounterFunction() {

        setCount(count + by)
        //3-1: setCount() л°‘м—ђм„њ someMethodInParent()лҐј нём¶њн•кІ л‹¤
        someMethodInParent()
    }

    function decrementCounterFunction() {
        
        setCount(count - by)
        //3-1 кі„м†Ќ: м–ґл–»кІЊ лђлЉ”м§Ђ ліґмћђ, мќґл ‡кІЊ н•л©ґ н•Ём€лҐј нём¶њн•  м€ мћ€лЉ”м§Ђ н™•мќён•ґліґмћђ 
        someMethodInParent()
    }

    return(
    <div className='Counter'>
        <span className='count'>{count}</span>
        <div>
         <button className="counterButton" 
                 onClick={incrementCounterFunction}
         >+{by}</button>
        <button className="counterButton" 
                 onClick={decrementCounterFunction}
         >-{by}</button>
        </div>
    </div>
    )
}

CounterButton.propTypes = {
    by: PropTypes.number
}

CounterButton.defaultProps = {
    by: 5
}
