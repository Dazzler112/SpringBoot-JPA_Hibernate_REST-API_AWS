import { useState } from 'react'
import {PropTypes} from 'prop-types'
import './Counter.css'

export default function Counter() {

    const [count, setCount] = useState(0);

    //8: í•¨ìˆ˜ ì´ë¦„ì€ 'incrementCounterParentFunction()'ìœ¼ë¡œ í•˜ê² ë‹¤
    //ì¼ë°˜ì ìœ¼ë¡œ ì½”ë“œë¥¼ ì‘ì„±í•­ ë•ŒëŠ” í•¨ìˆ˜ì´ë¦„ì— 'Parent'ë‚˜ 'Child'ê°™ì€ ê±¸ í¬í•¨ì‹œí‚¬ í•„ìš”ê°€ ì—†ë‹¤, 
    //í•˜ì§€ë§Œ í•˜ìœ„ ì»´í¬ë„ŒíŠ¸ì— ìˆëŠ” ë¡œì§ì„ ìƒìœ„ ì»´í¬ë„ŒíŠ¸ë¡œ ì˜®ê¸¸ ë•ŒëŠ” í—·ê°ˆë¦´ ìˆ˜ë„ ìˆê¸° ë•Œë¬¸ì— í•¨ìˆ˜ë¥¼ 'incrementCounterParentFunction'ìœ¼ë¡œ ë§Œë“  ê²ƒì´ë‹¤
    //ì´ í•¨ìˆ˜ëŠ” ë§¤ê°œë³€ìˆ˜ë¡œ ì¦ë¶„ ê°’ì„ ë°›ì•„ì•¼ í•œë‹¤ 'by'ë¼ëŠ” ë³€ìˆ˜ë¡œ ì¦ë¶„ ê°’ì„ ë°›ê² ë‹¤, ì´ í•¨ìˆ˜ì—ì„œ ìƒíƒœ ê°’ì— byê°’ì„ ë”í•´ ì—…ë°ì´íŠ¸í•´ì•¼ í•œë‹¤ 
    function incrementCounterParentFunction(by) {
        //8-1: CounterButton()ì»´í¬ë„ŒíŠ¸ì˜ incrementCounterFunction()í•¨ìˆ˜ë¡œì˜ setCountë¥¼ ë³µì‚¬í•´. setCount(count + by)ë¥¼ í˜¸ì¶œí•˜ê² ë‹¤, ë‹¤ ëë‹¤
        setCount(count + by)
    }

    return(
       <> 
        <span className='totalCount'>{count}</span>
        <CounterButton by={1}/>
        <CounterButton by={2}/>           
        <CounterButton by={5}/>
       </>
    )
}

function CounterButton({by}) {

    // [0, Æ’] 
    // const [firstElt, secondElt] = array
    const [count, setCount] = useState(0);

    function incrementCounterFunction() {

        setCount(count + by)

    }

    function decrementCounterFunction() {
        
        setCount(count - by)
    }

    return(
    <div className='Counter'>
        <span className='count'>{count}</span>
        <div>
         <button className="counterButton" 
                 onClick={incrementCounterFunction}
         >+{by}</button>
        <button className="counterButton" 
                 onClick={decrementCounterFunction}
         >-{by}</button>
        </div>
    </div>
    )
}

CounterButton.propTypes = {
    by: PropTypes.number
}

CounterButton.defaultProps = {
    by: 5
}

