import { useState } from 'react'
import {PropTypes} from 'prop-types'
import './Counter.css'

export default function Counter() {

    //5-1: ì—¬ê¸°ì— const [count, setCount] = useState(0);ë¥¼ ë¶™ì—¬ë„£ìœ¼ë©´ ë˜ê² ì§€
    //ì´ë ‡ê²Œ í•˜ë©´ Counterë ˆë²¨ì—ì„œ count ìƒíƒœë¥¼ ê´€ë¦¬í•  ìˆ˜ ìˆë‹¤, ì´ ìƒíƒœ ê°’ì„ ë§¨ ìœ„ì— í‘œì‹œí•  ê²ƒì´ë‹¤, ê·¸ë¦¬ê³  //5-2: CounterButton() ì»´í¬ë„ŒíŠ¸ë¡œ..
    const [count, setCount] = useState(0);

