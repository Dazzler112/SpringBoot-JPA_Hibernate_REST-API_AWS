        setCount(count + by)

    }

    function decrementCounterFunction() {
        
        setCount(count - by)
    }

    return(
    <div className='Counter'>

        //5-2: ì´ ( <span className='count'>{count}</span> ) ì½”ë“œë¥¼ ë³µì‚¬í•´ //5-3: Counter()í•¨ìˆ˜ë¡œ..
