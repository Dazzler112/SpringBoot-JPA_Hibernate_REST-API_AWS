вЏє Counter.jsx



export default function Counter() {

    //4: мќґм•€м—ђ л©”м„њл“њлҐј м¶”к°Ђн•ґ ліґкІ л‹¤, н•Ём€ м•€м—ђ лђ л‹¤лҐё н•Ём€лҐј м¶”к°Ђн•  м€ мћ€л‹¤, мќґл¦„мќЂ 'incrementCounterFunction()'мњјлЎњ н•кІ л‹¤, м¤‘кґ„нёлҐј м—ґкі  л‹«мќЂ л‹¤мќЊ
    function incrementCounterFunction() {
      //4-1: м•€м—ђм„њ console.log()лЎњ 'м¦ќк°Ђ лІ„нЉј нЃґл¦­лђЁ (increment clicked)'мќ„ м¶њл Ґн•кІ л‹¤
      console.log('increment clicked')
    }

    return(
    <div className='Counter'>
        <span className='count'>0</span>
        <button className="counterButton">increment</button>
    </div>
    )
}

-----------------------------------------------------------------------------------------------

мќґм њ 
мќґ <button className="counterButton">increment</button> лІ„нЉјмќґ нЃґл¦­лђђмќ„ л•Њ мќґ л©”м„њл“њк°Ђ нём¶њлђлЏ„лЎќ л§Њл“¤ кІѓмќґл‹¤
