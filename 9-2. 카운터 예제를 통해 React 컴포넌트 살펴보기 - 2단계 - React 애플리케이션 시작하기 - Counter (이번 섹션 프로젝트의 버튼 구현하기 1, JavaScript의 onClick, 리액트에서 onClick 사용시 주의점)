    function incrementCounterFunction() {
        console.log('increment clicked')
    }
    

    return(
    <div className='Counter'>
        <span className='count'>0</span>
        //7: м—¬кё°м—ђ л„Јм–ґм•ј н•лЉ” к°’мќЂ н•Ём€мќґл‹¤, к·ёлџј мќґлІ€м—ђлЉ” н•Ём€ мќґл¦„мќ„ м¤‘кґ„нёлЎњ к°ђм‹ём„њ л„Јм–ґліґкІ л‹¤
