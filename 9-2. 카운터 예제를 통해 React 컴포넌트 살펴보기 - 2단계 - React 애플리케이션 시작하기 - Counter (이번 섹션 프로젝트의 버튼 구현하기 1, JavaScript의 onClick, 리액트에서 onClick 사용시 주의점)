вЏє Counter.jsx


import './App.css';
//2-1: мћ„нЏ¬нЉёлЏ„ л°”кї”м¤Ђл‹¤ ( import Counter from './components/counter/Counter'; ), к·ёлџј м–ґл–»кІЊ л‚м¤лЉ”м§Ђ н™•мќён•ґліґмћђ
import Counter from './components/counter/Counter';

function App() {
  return (
      <div className="App">
    //2: м—¬кё°м„њ CounterлҐј мћ„нЏ¬нЉён•ґ Counter м»ґнЏ¬л„ЊнЉёлҐј м‚¬мљ©н•  кІѓмќґл‹¤, LearningComponentлҐј CounterлЎњ л°”кѕёкІ л‹¤ (<LearningComponent />м—ђм„њ <Counter /> лЎњ..)
     <Counter />
    </div>
  )
}

export default App;
