вЏє TodoApp.jsx



export default function TodoApp() {
    return(
        <div className='TodoApp'>
            Todo Management Application
            //3-2: LoginComponentлҐј м¶”к°Ђн•кі , м•„мЈј к°„л‹Ён•кІЊ м‹њмћ‘н•ґліґлЉ” кІѓмќґл‹¤
            <LoginComponent />
        </div>
    )
}

//3: TodoAppмќ мІ« лІ€м§ё м»ґнЏ¬л„ЊнЉёлҐј мѓќм„±н•ґліґкІ л‹¤ , м—¬кё°м—ђ л°”лЎњ лЎњк·ёмќё м»ґнЏ¬л„ЊнЉёлҐј мѓќм„±н•кіл‹¤,
//LoginComponentм§Ђ, мќґк±ґ н•Ём€ м»ґнЏ¬л„ЊнЉёмќґл‹¤ JSXлҐј return н•кІ м§Ђ
function LoginComponent() {
    return (
        //3-1: divлҐј л§Њл“¤кі  classNameмќЂ л­лЎњ м¤„к№Њ? Loginмќґлќјкі  н•кі  л§Њл“¤м–ґмЈјкі  Login Componentлќјкі  м“°кІ л‹¤, мў‹л‹¤
        //Todo кґЂл¦¬ м•±мќ мќјл¶ЂлЎњ лЎњк·ёмќё м»ґнЏ¬л„ЊнЉёлҐј м• н”Њл¦¬мјЂмќґм…м—ђ м¶”к°Ђн•ґм•јкІ л„¤//3-2: TodoApp() м•€мќ returnмњјлЎњ...
        <div className='Login'>
            Login Component
        </div>
    )
}
