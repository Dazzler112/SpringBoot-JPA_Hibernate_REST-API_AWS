}

function LoginComponent() {
    return (
        <div className='Login'>
            //6: ліґн†µмќЂ м‚¬мљ©мћђ мќґл¦„кіј л№„л°ЂлІ€нё, к·ёл¦¬кі  лІ„нЉјмќґ мћ€м§Ђ, м—¬кё°м—ђ м¶”к°Ђн•ґліґмћђ
            //<div classNameмќЂ LoginFormмќґлќјкі  н•кі  м—¬кё°м—ђлЉ” мќјл‹Ё м‚¬мљ©мћђ мќґл¦„мќ„ л„ЈлЉ” м№ёмќґ мћ€м–ґм•јкІ л‹¤
            <div className='LoginForm'>
                //6-1: <div></div> мќём—ђ лќјлІЁмќ„ м¶”к°Ђн•кІ л‹¤, 
                <div>
                    //6-2: labelмќґл‹¤ labelмќЂ User Nameмќґлќјкі  н•кІ л‹¤, м№ёмќґ мћ€м–ґм•јм§Ђ
                    <label>User Name</label>

                    //6-3: мћ…л Ґ м№ёмќґ лђ  н…ђлЌ° input typeмќЂ м‚¬мљ©мћђ мќґл¦„мќґл‹€к№Њ textлЎњ н•кІ л‹¤, text м№ём—ђм„њ мћ…л Ґмќ„ л°›кі  мќґл¦„мќ„ м¤„ м€ мћ€л‹¤ nameмќЂ usernameмќґлќјкі  н•кІ л‹¤
                    //JSXлҐј м‚¬мљ©н•л‹€к№Њ м—¬кё°м—ђ л‹«лЉ” нѓњк·ёлҐј л„Јм–ґм¤м•ј н•њл‹¤
                    <input type="text"/>

                //6-4: м¶”к°ЂлЎњ л№„л°ЂлІ€нё м№ёлЏ„ л„Јм–ґм¤м•ј н•њл‹¤, л№„л°ЂлІ€нё м№ёмќ„ мњ„н•њ лђ л‹¤лҐё divлҐј л§Њл“¤кІ л‹¤
                <div>
                    //6-5: мќґк±ґ Passwordк°Ђ лђкІ м§Ђ, usernameкіј passwordк°Ђ мѓќкІјкµђ
                    <label>Password</label>
                    //6-6: м—¬кё°лЏ„ nameмќґ passwordм§Ђ, typeлЏ„ passwordлќјкі  н•ґм¤Ђл‹¤ к·ёлџ¬л©ґ л‘ђ к°њлЉ” л‹¤ лђђл‹¤
                    <input type="password" name="password"/>
                </div>
                </div>
            </div>
            button
        </div>
    )
}

function WelcomeComponent() {
    return (
        <div className='Welcome'>
            Welcome Component
        </div>
    )
