вЏє User нЃґлћмЉ¤нЊЊмќј



package com.in28minutes.rest.webservices.restfulwebservices.user;

import java.time.*;

public class User {

	private Integer id;

  //2-1: лЁјм Ђ мќґл¦„мќЂ мµњм†Њ л‘ђ кёЂмћђк°Ђ лђкІЊ н•кІ л‹¤, @SizeлҐј м¶”к°Ђн•кі  SizeлҐј мћ„нЏ¬нЉён•кІ л‹¤, jakarta.validation.constratins.Size мљ°л¦¬к°Ђ мћ„нЏ¬нЉён•лЉ” кІЊ л°”лҐґ мќґкІѓмќґл‹¤
  //min=2лҐј л„Јм–ґм¤Ђл‹¤, мќґл¦„мќЂ мµњм†Њ 2кёЂмћђм—¬м•ј н•њл‹¤лЉ” мЎ°к±ґмќґл‹¤
  //*м—¬кё°м„  м†Ќм„±мќ нЃ¬кё°лҐј @SizeлЎњ н™•мќён•њл‹¤, мќґл¦„мќ мµњм†Њ кёёмќґлҐј м њм•Ѕн•лЉ” мЎ°к±ґмќ„ лЄ…м‹њн•лЉ” кІѓмќґл‹¤
  @Size(min=2)
	private String name;
  //мѓќмќјмќЂ н•­мѓЃ кіјк±°мќ л‚ м§њлЎњ м„¤м •лђкІЊ @PastлҐј м¶”к°Ђн•кі  ctrl_1мќ„ л€„лҐґкі  jakarta.validation.constraints.PastлҐј м„ нѓќн•њл‹¤, кіјк±° л‚ м§њк°Ђ лђлЏ„лЎќ мЎ°к±ґмќ„ м„¤м •н–€л‹¤
  //*м—¬кё°м„  мѓќмќјмќґ кіјк±°мќ л‚ м§њм—¬м•ј н•њл‹¤лЉ” мЎ°к±ґмќ„ л¶™мЂкі , нЊЊмќјмќ„ м ЂмћҐн•кі  м•„к№Њ к·ё мљ”мІ­мќ„ л‹¤м‹њ ліґл‚ґ ліґкІ л‹¤
	@Past
  private LocalDate birthDate;
  
	
	public User(Integer id, String name, LocalDate birthDate) {
		super();
		this.id = id;
		this.name = name;
		this.birthDate = birthDate;
	}

	public Integer getId() {
		return id;
	}

	public void setId(Integer id) {
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public LocalDate getBirthDate() {
		return birthDate;
	}

	public void setBirthDate(LocalDate birthDate) {
		this.birthDate = birthDate;
	}

	@Override
	public String toString() {
		return "User [id=" + id + ", name=" + name + ", birthDate=" + birthDate + "]";
	}
	
}

