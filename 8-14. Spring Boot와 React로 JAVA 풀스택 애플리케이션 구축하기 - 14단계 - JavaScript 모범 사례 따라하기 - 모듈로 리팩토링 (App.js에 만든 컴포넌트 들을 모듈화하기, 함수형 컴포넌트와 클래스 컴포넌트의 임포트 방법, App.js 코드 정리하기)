⏺ ThirdComponet.jsx

//6: 이건 클래스 컴포넌트다 렌더링 메서드가 있다, 이 특정 클래스에서 클래스 컴포넌트를 생성하는 건 마지막 일 것이다
// export default하고 이 클래스를 주고 저장한다
export default class ThirdComponent  extends Component{

  render () {
    return(
      <div className="ThirdComponent">Third Component</div>
    );
  }
}

