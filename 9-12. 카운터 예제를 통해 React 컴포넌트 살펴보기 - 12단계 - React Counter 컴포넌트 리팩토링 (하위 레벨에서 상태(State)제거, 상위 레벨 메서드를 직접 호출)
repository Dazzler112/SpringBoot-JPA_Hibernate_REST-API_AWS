//1-2: useStateлЏ„ м§Ђмљ°кІ л‹¤
// import { useState } from 'react'  (<== м—¬кё°м„њл§Њ мЈјм„ќмІл¦¬ м‹¤м њ мЅ”л“њм—ђм„  м‚­м њ)

import {PropTypes} from 'prop-types'

export default function CounterButton({by, incrementMethod, decrementMethod}) {

//1: мќґ мѓЃнѓњлЉ” лЌ” мќґмѓЃ м‚¬мљ©н•м§Ђ м•Љмњјл‹€к№Њ м њк±°, CounterButtonм—ђм„њ count мѓЃнѓњлҐј м њк±°н•кІ л‹¤
/*
    // [0, Ж’] 
    // const [firstElt, secondElt] = array
    const [count, setCount] = useState(0);  (<== м—¬кё°м„њл§Њ мЈјм„ќмІл¦¬ м‹¤м њ мЅ”л“њм—ђм„  м‚­м њ)
*/

    function incrementCounterFunction() {

        //1-1: мѓЃнѓњлҐј м њк±°н–€мњјл‹€ мќґм њ лЌ” мќґмѓЃ setCount()л©”м„њл“њлҐј нём¶њн•  н•„мљ”лЏ„ м—†кІ м§Ђ
       // setCount(count + by) (<== м—¬кё°м„њл§Њ мЈјм„ќмІл¦¬ м‹¤м њ мЅ”л“њм—ђм„  м‚­м њ)
        incrementMethod(by)
    }

    function decrementCounterFunction() {

      //1-1 кі„м†Ќ: м—¬кё°лЏ„ м‚­м њ.., л‹¤ лђњ кІѓ к°™л‹¤ //1-2: л§Ёмњ„мќ importлЎњ ..
      //  setCount(count - by) (<== м—¬кё°м„њл§Њ мЈјм„ќмІл¦¬ м‹¤м њ мЅ”л“њм—ђм„  м‚­м њ)
        decrementMethod(by)
    }

    return(
    <div className='Counter'>
        <div>
         <button className="counterButton" 
                 onClick={incrementCounterFunction}
         >+{by}</button>
        <button className="counterButton" 
                 onClick={decrementCounterFunction}
         >-{by}</button>
        </div>
    </div>
    )
}

CounterButton.propTypes = {
    by: PropTypes.number
}

CounterButton.defaultProps = {
    by: 5
}

