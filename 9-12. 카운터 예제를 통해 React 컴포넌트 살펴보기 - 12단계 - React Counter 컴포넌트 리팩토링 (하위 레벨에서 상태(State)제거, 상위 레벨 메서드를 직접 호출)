import {PropTypes} from 'prop-types'

export default function CounterButton({by, incrementMethod, decrementMethod}) {

//1: ì´ ìƒíƒœëŠ” ë” ì´ìƒ ì‚¬ìš©í•˜ì§€ ì•Šìœ¼ë‹ˆê¹Œ ì œê±°, CounterButtonì—ì„œ count ìƒíƒœë¥¼ ì œê±°í•˜ê² ë‹¤
/*
    // [0, Æ’] 
    // const [firstElt, secondElt] = array
    const [count, setCount] = useState(0);  (<== ì—¬ê¸°ì„œë§Œ ì£¼ì„ì²˜ë¦¬ ì‹¤ì œ ì½”ë“œì—ì„  ì‚­ì œ)
*/

    function incrementCounterFunction() {

        //1-1: ìƒíƒœë¥¼ ì œê±°í–ˆìœ¼ë‹ˆ ì´ì œ ë” ì´ìƒ setCount()ë©”ì„œë“œë¥¼ í˜¸ì¶œí•  í•„ìš”ë„ ì—†ê² ì§€
       // setCount(count + by) (<== ì—¬ê¸°ì„œë§Œ ì£¼ì„ì²˜ë¦¬ ì‹¤ì œ ì½”ë“œì—ì„  ì‚­ì œ)
        incrementMethod(by)
    }

    function decrementCounterFunction() {

      //1-1 ê³„ì†: ì—¬ê¸°ë„ ì‚­ì œ.., ë‹¤ ëœ ê²ƒ ê°™ë‹¤ //1-2: ë§¨ìœ„ì˜ importë¡œ ..
