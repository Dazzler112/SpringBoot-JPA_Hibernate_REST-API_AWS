вЏє VSC


вЏє TodoApp.jsx




import {BrowserRouter, Routes, Route} from 'react-router-dom'
import './TodoApp.css'
import LogoutComponent from './LogoutComponent'
import HeaderComponent from './HeaderComponent'
import ListTodosComponent from './ListTodosComponent'
import ErrorComponent from './ErrorComponent'
import WelcomeComponent from './WelcomeComponent'
import LoginComponent from './LoginComponent'
import AuthProvider from './security/AuthContext'

//3-1: мћ„нЏ¬нЉёк°Ђ л“¤м–ґм™”л‹¤, ./security/AuthContextм—ђм„њ AuthProviderм™Ђ useAuthк°Ђ л“¤м–ґм™”л‹¤ мў‹л‹¤ //3-2: л‹¤м‹њ AuthencatedRoute() н•Ём€лЎњ..
import AuthProvider, { useAuth } from './security/AuthContext'


function AuthencatedRoute({children}) {

    //3:const authContext = useAuth(), ctrl+мЉ¤нЋмќґмЉ¤ м—”н„°лЎњ мћ„нЏ¬нЉё н•кІ л‹¤ //3-1: мћ„нЏ¬нЉёлЎњ..
    const authContext = useAuth()

    //3-2: ifл¬ёмњјлЎњ authContext.isAuthenticated н™•мќён•њл‹¤, м‚¬мљ©мћђк°Ђ мќём¦ќлђм—€мњјл©ґ childrenмќ„ л°н™н•лЉ” к±°м§Ђ, м ЂмћҐн•њл‹¤
    if(authContext.isAuthenticated)
      return children
}

export default function TodoApp() {
    return(
        <div className='TodoApp'>
            <AuthProvider>
            <BrowserRouter>
                <HeaderComponent />
                <Routes>
                    <Route path='/' element={<LoginComponent />} />
                    <Route path='/login' element={<LoginComponent />} />

                    <Route path='/welcome/:username' element={
                        <AuthencatedRoute>
                        <WelcomeComponent />
                        </AuthencatedRoute>
                        } />

                    <Route path='/todos' element={<ListTodosComponent />} />
                    <Route path='/logout' element={<LogoutComponent />} />

                    <Route path='*' element={<ErrorComponent />} />
                </Routes>
            </BrowserRouter>
            </AuthProvider>
        </div>
    )
}
