            incrementMethod={incrementCounterParentFunction} decrementMethod={decrementCounterParentFunction}/>           
        <CounterButton by={5} 
            incrementMethod={incrementCounterParentFunction} decrementMethod={decrementCounterParentFunction}/>
       </>
    )
}


