export default function Counter() {

    const buttonStyle = {
        fontSize: "30px",
        backgroundColor: "#00a5ab",
        width: "100px",    
        margin: "10px",
        color: "white",
        padding: "15px",

        //10: ê·¸ëŸ¬ë ¤ë©´ border-radiusë¼ëŠ” ì†ì„±ì„ ì¶”ê°€í•´ì•¼ í•œë‹¤, JavaScript ê°ì²´ì—ì„œëŠ” ì–´ë–»ê²Œ ì¨ì•¼ í• ê¹Œ?
