export default function Counter() {

    const buttonStyle = {
          fontSize: "30px",
          backgroundColor: "#00a5ab"

          //9: width ì†ì„±ë„ ì¶”ê°€í•˜ê² ë‹¤ ê°’ì€ 100pxë¡œ ì§€ì •í•˜ê² ë‹¤, ì¢‹ë‹¤
