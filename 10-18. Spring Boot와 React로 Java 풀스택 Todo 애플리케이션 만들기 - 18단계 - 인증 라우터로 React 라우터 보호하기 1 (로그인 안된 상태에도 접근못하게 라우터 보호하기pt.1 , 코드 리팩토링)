    function handleSubmit() {

        if(authContext.login(username, password)) {
            setShowSuccessMessage(true)

          //4: м—¬кё° мЅ”л“њлЏ„ м‚­м њн•кІ л‹¤
          /* (<= м—¬кё°м„њл§Њ мЈјм„ќмІл¦¬ м‹¤м њ мЅ”л“њлЉ” м‚­м њ)
            setShowErrorMessage(false)
            navigate(`/welcome/${username}`)
          */
        }else {
          //4-1: м—¬кё° м„±кіµ л©”м‹њм§ЂлЉ” м‚­м њн•кІ л‹¤
         //   setShowSuccessMessage(false) (<= м—¬кё°м„њл§Њ мЈјм„ќмІл¦¬ м‹¤м њ мЅ”л“њлЉ” м‚­м њ)
            setShowErrorMessage(true)
        }
    }

    return (
        <div className='Login'>
            <h1>Time to Login!</h1>

            //4-2: м—¬кё°м—ђ м„±кіµ л©”м‹њм§Ђ кґЂл Ё мЅ”л“њлЏ„ м‚­м њн•њл‹¤, м ЂмћҐн•кі 
        //    {showSuccessMessage && <div className="errorMessage">Authentication Successfully</div>} (<= м—¬кё°м„њл§Њ мЈјм„ќмІл¦¬ м‹¤м њ мЅ”л“њлЉ” м‚­м њ)

            {showErrorMessage && <div className="errorMessage">Authentication Failed. 
                                                        Please check your credentials.</div>}
            <div className='LoginForm'>
                <div>
                    <label>User Name:</label>
                    <input type="text" name="username" value={username} onChange={handleUsernameChange} />
                </div>
                <div>
                    <label>Password:</label>
                    <input type="password" name="password" value={password} onChange={handlePasswordChange}/>
                </div>
                <div>
                    <button type="button" name="login" onClick={handleSubmit}>login</button>
                </div>
            </div>
        </div>
    )
}

export default LoginComponent

