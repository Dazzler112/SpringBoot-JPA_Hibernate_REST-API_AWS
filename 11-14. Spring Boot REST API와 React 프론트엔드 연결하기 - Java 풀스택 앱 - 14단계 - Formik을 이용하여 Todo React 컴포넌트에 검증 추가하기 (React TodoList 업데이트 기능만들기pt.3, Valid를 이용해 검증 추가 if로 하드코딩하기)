import {useParams} from 'react-router-dom'
import { retrieveTodoApi } from './api/TodoApiService'
import { useAuth } from './security/AuthContext'
import { useEffect, useState } from 'react'

//4-1:  к·ёлџј мћ„нЏ¬нЉём—ђ м¶”к°Ђн•кІ л‹¤ {}м—ђ ErrorMessage м¶”к°Ђ... //4-2: л‹¤м‹њ returnмњјлЎњ..
import { Formik, Form, Field, ErrorMessage } from 'formik'


export default function TodoComponent() {

    const {id} = useParams()

    const[description, setDescription] = useState('')

    const[targetDate, setTargetDate] = useState('')

    const authContext = useAuth()

    const username = authContext.username

    useEffect(
        () => retrieveTodos(),
        [id]
        )

    function retrieveTodos() {
        retrieveTodoApi(username, id)
        .then(response => {
            setDescription(response.data.description)
            setTargetDate(response.data.targetDate)
        })
        .catch(error => console.log(error))
    }

    function onSubmit(values) {
        console.log(values)
    }

    function validate(values) {
        let errors = {
            description: 'Enter a valid description'
        }

        console.log(values)
        return errors
    }

    return (
        <div className="container">
            <h1>Enter Todo Details</h1>
            <div>
                <Formik initialValues={{ description ,targetDate }}
                    enableReinitialize = {true}
                    onSubmit={onSubmit}
                    validate={validate}
                >
                    {
                    (props) =>  (
                        <Form>
    
                          //4: <ErrorMessage>лќјлЉ” к±ё л§Њл“¤ кІѓмќґл‹¤ л°”лЎњ м—¬кё° л‹«лЉ” нѓњк·ёлҐј л„Јм–ґм¤„ к±°кі  <ErrorMessage>м—ђ л§ЋмќЂ м†Ќм„±мќ„ л„Јмќ„ кІѓмќґл‹¤
                          //мќґ ErrorMessageлЏ„ м—­м‹њ formikм—ђм„њ м¤м§Ђ //4-1: importлЎњ..
                          <ErrorMessage 
                            //4-2: к·ёл¦¬кі  <ErrorMessage>м—ђм„њ м њлЄ©мќЂ м–ґл–¤ н•„л“њмќјк№Њ? м њлЄ©мќЂ descriptionмќґкі , л„€лЉ” к·ёк±ё <div>лЎњм„њ н‘њм‹њн•л ¤кі  н•њл‹¤
                            name="description"
                            //4-3: к·ёлџј л„€лЉ” component="div"лќјкі  н•ґм¤„ к±°кі ,
                            component="div"
                            //4-4: к·ёкІѓм—ђ classNameмќ„ м§Ђм •н•  кІѓмќґл‹¤ к·ёлџј className="alert alert-warning"мќґлќјкі  н•ґмЈјмћђ, к·ёл¦¬кі  мќґк±ё м ЂмћҐн•њл‹¤
                            className="alert alert-warning"
                          />

                            <fieldset className="form-group">
                                <label>Description</label>
                                <Field type="text" className="form-control" name="description"/>
                            </fieldset>
                            <fieldset className="form-group">
                                <label>Target Date</label>
                                <Field type="date" className="form-control" name="targetDate"/>
                            </fieldset>
                            <div>
                                <button className="btn btn-success m-5" type="submit">Save</button>
                            </div>
                        </Form>
                    )
                }
                </Formik>
            </div>
        </div>
    ) 
}
